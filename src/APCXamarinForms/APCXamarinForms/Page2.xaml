             x:Class="APCXamarinForms.Page2" Title="Second page">
    
    
    <StackLayout Padding="0,20,0,0" Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="This is the title style from the Second page." Style="{DynamicResource TitleAppStyle}"/>
